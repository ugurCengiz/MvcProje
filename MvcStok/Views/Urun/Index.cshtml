@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<a href="/URUN/UrunEkle" style="margin-bottom: 15px" class="btn btn-primary">YENİ ÜRÜN EKLE</a>

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOk</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
    @foreach (var urn in Model)
    {
        <tr>
            <th>@urn.URUNID</th>
            <td>@urn.URUNAD</td>
            <td>@urn.MARKA</td>
            <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
            <td>@urn.FIYAT</td>
            <td>@urn.STOK</td>
            <td><a href="/URUN/SIL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
            <td><a href="/URUN/GUNCELLE/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
    </tbody>
</table>


